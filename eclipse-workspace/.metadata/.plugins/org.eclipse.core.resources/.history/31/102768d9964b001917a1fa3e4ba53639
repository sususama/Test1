
public class Student {
	public static void main(String[] args) {
		Student s = new Student("zhangsan", 20, 'M');
		String sn = s.getName();
		int a = s.getAge();
		char se = s.getSex();
	}
	private String name;
	private int age;
	private char sex;
	public Student(String name, int age, char sex) {
		super();
		this.name = name;
		this.age = age;
		this.sex = sex;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	
	public void setAge(int age) {
		this.age = age;
	}
	public char getSex() {
		return sex;
	}
	public void setSex(char sex) {
		this.sex = sex;
	}
}
